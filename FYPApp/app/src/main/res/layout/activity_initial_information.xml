<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="30dp">

    <TextView
        android:id="@+id/headline_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/headline_write_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:gravity="start"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/profile_headline"
        app:layout_constraintVertical_chainStyle="packed"
        android:paddingHorizontal="20dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <EditText
        android:id="@+id/headline_write_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headline_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/location_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headline_write_view"
        app:layout_constraintBottom_toTopOf="@id/location_write_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:gravity="start"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/what_is_your_current_location"
        app:layout_constraintVertical_chainStyle="packed"
        android:paddingHorizontal="20dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/location_write_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/location_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"/>

    <Button
        style="@style/form_button"
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>