<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:clipToPadding="false">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:background="@drawable/progress_bar_background"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:indeterminate="true"
        android:visibility="visible"
        android:elevation="1dp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_view"
        android:clipToPadding="false"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:paddingTop="20dp"
        android:layout_marginBottom="-30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/cancel_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cross"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="24sp"
                android:textColor="@color/grey"
                android:gravity="top"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"/>

            <TextView
                android:id="@+id/logout_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_out"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="18sp"
                android:textColor="@color/turquoise_light"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture_view"
                android:layout_height="120dp"
                android:layout_width="120dp"
                android:src="@drawable/ic_baseline_person_120"
                android:background="@drawable/back_avatar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:elevation="5dp"
                android:contentDescription="@string/profile_photo"
                app:layout_constraintVertical_bias="0"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view"
                app:layout_constraintTop_toBottomOf="@id/profile_picture_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
                android:layout_marginHorizontal="10dp"
                android:paddingBottom="20dp"
                android:translationY="-60dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_view_color">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/edit_profile_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/bio_view"
                        android:gravity="end"
                        android:paddingHorizontal="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/turquoise_light"
                        app:layout_constraintVertical_chainStyle="packed"
                        android:paddingVertical="10dp"
                        android:layout_marginTop="70dp"/>

                    <TextView
                        android:id="@+id/name_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/email_view"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:gravity="start"
                        android:textSize="18sp"
                        android:text="@string/user_name"
                        app:layout_constraintVertical_chainStyle="packed"
                        android:textStyle="bold"
                        android:paddingHorizontal="20dp"
                        app:layout_constraintVertical_bias="0"
                        android:paddingVertical="10dp"
                        android:textColor="@color/opposite_main"
                        android:layout_marginTop="70dp"/>

                    <TextView
                        android:id="@+id/bio_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/name_view"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="start"
                        android:textSize="18sp"
                        android:text="@string/bio_text"
                        app:layout_constraintVertical_chainStyle="packed"
                        android:paddingHorizontal="20dp"
                        android:textColor="@color/opposite_main"/>

                    <TextView
                        android:id="@+id/email_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/bio_view"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/separator_view"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="@string/user_email"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        android:layout_marginTop="10dp"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintVertical_bias="0"
                        android:layout_marginStart="20dp" />

                    <TextView
                        android:id="@+id/separator_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/vertical_bar"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintLeft_toRightOf="@id/email_view"
                        app:layout_constraintRight_toLeftOf="@id/location_view"
                        app:layout_constraintTop_toBottomOf="@id/bio_view"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/location_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/location"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintLeft_toRightOf="@id/separator_view"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/bio_view"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <View
                        android:id="@+id/line1"
                        android:background="#4D7C7C7C"
                        android:layout_width = "match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/location_view"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/edit_skills_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"
                        app:layout_constraintTop_toBottomOf="@id/line1"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="10dp"
                        android:gravity="end"
                        android:paddingHorizontal="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/turquoise_light"
                        app:layout_constraintVertical_chainStyle="packed"
                        android:layout_marginBottom="10dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintBottom_toTopOf="@id/skills_view"/>

                    <TextView
                        android:id="@+id/skills_title_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="@string/skills"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line1"
                        app:layout_constraintVertical_bias="0"
                        android:paddingVertical="10dp"
                        android:textColor="@color/opposite_main"
                        android:layout_marginTop="10dp"
                        app:layout_constraintBottom_toTopOf="@id/skills_view"/>

                    <TextView
                        android:id="@+id/skills_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/skills_title_view"
                        app:layout_constraintBottom_toTopOf="@id/line2"
                        android:text="@string/placeholder_skills"
                        android:layout_marginHorizontal="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/opposite_main"/>

                    <View
                        android:id="@+id/line2"
                        android:background="#4D7C7C7C"
                        android:layout_width = "match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/skills_view"
                        app:layout_constraintBottom_toTopOf="@id/interests_title_view"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/edit_interests_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"
                        app:layout_constraintTop_toBottomOf="@id/line2"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="10dp"
                        android:gravity="end"
                        android:paddingHorizontal="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/turquoise_light"
                        app:layout_constraintVertical_chainStyle="packed"
                        android:layout_marginBottom="10dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintBottom_toTopOf="@id/interests_view"/>

                    <TextView
                        android:id="@+id/interests_title_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="@string/interests"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line2"
                        app:layout_constraintVertical_bias="0"
                        android:paddingVertical="10dp"
                        android:textColor="@color/opposite_main"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toTopOf="@id/interests_view"/>

                    <TextView
                        android:id="@+id/interests_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/interests_title_view"
                        app:layout_constraintBottom_toTopOf="@id/line3"
                        android:text="@string/placeholder_interests"
                        android:layout_marginHorizontal="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/opposite_main"/>

                    <View
                        android:id="@+id/line3"
                        android:background="#4D7C7C7C"
                        android:layout_width = "match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/interests_view"
                        app:layout_constraintBottom_toTopOf="@id/section_view"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/edit_experience_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"
                        app:layout_constraintTop_toBottomOf="@id/line3"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="10dp"
                        android:gravity="end"
                        android:paddingHorizontal="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/turquoise_light"
                        app:layout_constraintVertical_chainStyle="packed"
                        android:layout_marginBottom="10dp"
                        android:paddingVertical="10dp"/>

                    <TextView
                        android:id="@+id/section_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="@string/experience"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line3"
                        app:layout_constraintVertical_bias="0"
                        android:paddingVertical="10dp"
                        android:textColor="@color/opposite_main"
                        android:layout_marginTop="10dp"/>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintTop_toBottomOf="@id/section_view"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>