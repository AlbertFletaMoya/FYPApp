<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scroll_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shadow_bottom"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/cancel_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/page_title_view"
            android:text="@string/cross"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textSize="24sp"
            android:textColor="@color/grey"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        <TextView
            android:id="@+id/page_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/cancel_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/edit_search"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:textColor="@color/opposite_main"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

        <TextView
            android:id="@+id/search_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/save"
            android:textSize="20sp"
            android:textColor="@color/turquoise_light"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:paddingBottom="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/description_layout"
                style="@style/edit_page_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/description_write_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="@string/describe_what_you_are_looking_for_star"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/edit_skills_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                app:layout_constraintTop_toBottomOf="@id/description_layout"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:gravity="end"
                android:paddingHorizontal="20dp"
                android:textSize="18sp"
                android:textColor="@color/turquoise_light"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginBottom="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintBottom_toTopOf="@id/skills_view"/>

            <TextView
                android:id="@+id/skills_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="@string/skills_you_are_looking_for"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description_layout"
                app:layout_constraintVertical_bias="0"
                android:paddingVertical="10dp"
                android:textColor="@color/opposite_main"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/skills_view"/>

            <TextView
                android:id="@+id/skills_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/skills_title_view"
                app:layout_constraintBottom_toTopOf="@id/edit_interests_view"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/opposite_main"/>

            <TextView
                android:id="@+id/edit_interests_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                app:layout_constraintTop_toBottomOf="@id/skills_view"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:gravity="end"
                android:paddingHorizontal="20dp"
                android:textSize="18sp"
                android:textColor="@color/turquoise_light"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginBottom="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintBottom_toTopOf="@id/skills_view"/>

            <TextView
                android:id="@+id/interests_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="@string/interests_you_are_looking_for"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/skills_view"
                app:layout_constraintVertical_bias="0"
                android:paddingVertical="10dp"
                android:textColor="@color/opposite_main"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/interests_view"/>

            <TextView
                android:id="@+id/interests_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/interests_title_view"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/opposite_main"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>