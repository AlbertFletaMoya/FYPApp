<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/position_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/company_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:gravity="start"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/position"
        app:layout_constraintVertical_chainStyle="packed"
        android:paddingHorizontal="20dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:textColor="@color/opposite_main"/>

    <TextView
        android:id="@+id/company_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/position_view"
        app:layout_constraintBottom_toTopOf="@id/position_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="start"
        android:textSize="20sp"
        android:text="@string/company"
        app:layout_constraintVertical_chainStyle="packed"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/opposite_main"/>



    <TextView
        android:id="@+id/date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/dates"
        android:textSize="20sp"
        android:textColor="@color/opposite_main"
        app:layout_constraintBottom_toTopOf="@id/job_description_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/company_view"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"
        android:paddingHorizontal="20dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="5dp"/>

    <com.project.fypapp.view.ExpandableTextView
        android:id="@+id/job_description_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="start"
        android:textSize="20sp"
        android:text="@string/job_description"
        app:layout_constraintVertical_chainStyle="packed"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/opposite_main"/>

</androidx.constraintlayout.widget.ConstraintLayout>